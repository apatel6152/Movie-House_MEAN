extends layout

block content
  .row 
    h1.listheader Create New Movie 
  .row
    .col-xs-12.col-md-9
      form.form-horizontal(action=" ", method="POST", role="form")
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="name") Movie Name
          .col-xs-12.col-sm-8
            input#name.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="genre") Genre
          .col-xs-12.col-sm-8
            input#name.form-control(name="genre")
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="cast") Cast
          .col-xs-12.col-sm-8
            input#name.form-control(name="cast")
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="director") Director
          .col-xs-12.col-sm-8
            input#name.form-control(name="director")
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="duration") Duration
          .col-xs-12.col-sm-8
            input#name.form-control(name="duration")
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="releaseDate") Release Date
          .col-xs-12.col-sm-8
            input#name.form-control(name="releaseDate")
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="rating") Rating
          .col-xs-12.col-sm-8
            select#name.form-control(name="rating")
              option(value='5') 5
              option(value='4') 4
              option(value='3') 3
              option(value='2') 2
              option(value='1') 1
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="description") Description
          .col-xs-12.col-sm-8
            input#name.form-control(name="description")
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="image") Image URL
          .col-xs-12.col-sm-8
            input#name.form-control(name="image")
        button.btn.btn-default.pull-right.button Create
    .col-xs-12.col-md-3