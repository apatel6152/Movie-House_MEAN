extends layout

block content
  .row 
    h1.listheader Edit Movie 
  .row
    .col-xs-12.col-md-9
      form.form-horizontal(action=" ", method="POST", role="form")
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="name") Movie Name
          .col-xs-12.col-sm-8
            input#name.form-control(name="name" , value=(undefined===movies ? '' : movies.name))
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="genre") Genre
          .col-xs-12.col-sm-8
            input#name.form-control(name="genre", value=(undefined===movies ? '' : movies.genre))
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="cast") Cast
          .col-xs-12.col-sm-8
            input#name.form-control(name="cast", value=(undefined===movies ? '' : movies.cast))
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="director") Director
          .col-xs-12.col-sm-8
            input#name.form-control(name="director", value=(undefined===movies ? '' : movies.director))
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="duration") Duration
          .col-xs-12.col-sm-8
            input#name.form-control(name="duration", value=(undefined===movies ? '' : movies.duration))
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="releaseDate") Release Date
          .col-xs-12.col-sm-8
            input#name.form-control(name="releaseDate", value=(undefined===movies ? '' : movies.releaseDate))
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="rating") Rating
          .col-xs-12.col-sm-8
            select#name.form-control(name="rating", value=(undefined===movies ? '' : movies.rating))
              option(value='5') 5
              option(value='4') 4
              option(value='3') 3
              option(value='2') 2
              option(value='1') 1
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="description") Description
          .col-xs-12.col-sm-8
            input#name.form-control(name="description", value=(undefined===movies ? '' : movies.description))
        .form-group
          label.col-xs-10.col-sm-4.control-label.lable(for="image") Image URL
          .col-xs-12.col-sm-8
            input#name.form-control(name="image", value=(undefined===movies ? '' : movies.image))
        button.btn.btn-default.pull-right.button Edit
    .col-xs-12.col-md-3